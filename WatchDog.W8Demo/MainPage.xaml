<Page
    x:Class="WatchDog.W8Demo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WatchDog.W8Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListBox x:Name="listbox" HorizontalAlignment="Left" Height="255" Margin="37,138,0,0" VerticalAlignment="Top" Width="240">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Source}" />
                 </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Create Subscription" HorizontalAlignment="Left" Margin="347,50,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Margin="37,53,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="286"/>
    </Grid>
</Page>
